<Page x:Class="ESG.Views.WebsitesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:vm="clr-namespace:ESG.ViewModels"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:util="clr-namespace:ESG.Converters"
      TextOptions.TextFormattingMode="Display"
      TextOptions.TextRenderingMode="ClearType"
      Title="Управление веб-сайтами"
      Background="#FFF5F7FA">
    <Page.DataContext>
        <vm:WebsitesViewModel/>
    </Page.DataContext>

    <Page.Resources>
        <util:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Page.Resources>

    <Grid Margin="15" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Управление веб-сайтами" 
                   FontSize="24" FontWeight="SemiBold"
                   Margin="0,0,0,10" Foreground="#222222"/>

        <!-- Панель инструментов -->
        <Border Grid.Row="1" Background="White" CornerRadius="6" 
                Padding="12" Margin="0,0,0,10"
                Effect="{StaticResource CardShadow}"
                Visibility="{Binding CanPerformCrud, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Button Command="{Binding AddCommand}" 
                        Style="{StaticResource PrimaryButton}" Margin="0,0,12,0"
                        ToolTip="Добавить новый веб-сайт"
                        Visibility="{Binding CanPerformCrud, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="Plus" Width="18" Height="18" Margin="0,0,8,0"
                                               VerticalAlignment="Center"/>
                        <TextBlock Text="Добавить" FontSize="14" Foreground="White"
                                 VerticalAlignment="Center" Margin="0,1,0,0"/>
                    </StackPanel>
                </Button>

                <Button Command="{Binding EditCommand}" 
                        Style="{StaticResource SecondaryButton}" Margin="0,0,12,0"
                        ToolTip="Редактировать выбранный веб-сайт"
                        Visibility="{Binding CanPerformCrud, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="Pencil" Width="18" Height="18" Margin="0,0,8,0"
                                               VerticalAlignment="Center"/>
                        <TextBlock Text="Редактировать" FontSize="14" 
                                 VerticalAlignment="Center" Margin="0,1,0,0"/>
                    </StackPanel>
                </Button>

                <Button Command="{Binding DeleteCommand}" 
                        Style="{StaticResource DangerButton}" Margin="0,0,12,0"
                        ToolTip="Удалить выбранный веб-сайт"
                        Visibility="{Binding CanPerformCrud, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="Delete" Width="18" Height="18" Margin="0,0,8,0"
                                               VerticalAlignment="Center"/>
                        <TextBlock Text="Удалить" FontSize="14" Foreground="White"
                                 VerticalAlignment="Center" Margin="0,1,0,0"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>

        <!-- Общий фильтр -->
        <Expander Grid.Row="2" Header="Общий фильтр" IsExpanded="False" Margin="0,0,0,10">
            <Border Background="White" CornerRadius="6" 
                    Padding="12" Margin="0"
                    Effect="{StaticResource CardShadow}">
                <StackPanel Orientation="Vertical">
                    <!-- Фильтр по компаниям -->
                    <Expander Header="Фильтр по компаниям" IsExpanded="True" Margin="0,0,0,10">
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                <TextBox Width="450" Margin="0,0,10,5"
                                         Text="{Binding CompanySearchText, UpdateSourceTrigger=PropertyChanged}"
                                         materialDesign:HintAssist.Hint="Поиск по компаниям"
                                         Style="{StaticResource StyledTextBox}"/>
                                <Button Command="{Binding ClearCompanySelectionCommand}" 
                                        Content="Очистить выбор" 
                                        Style="{StaticResource SecondaryButton}" 
                                        Width="150" 
                                        Margin="0,0,0,5"/>
                            </StackPanel>
                            <ScrollViewer MaxHeight="100" Width="450" Background="#F9F9F9" BorderBrush="#DDD" BorderThickness="1"
                                          HorizontalAlignment="Left" VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding FilteredCompaniesForList}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <CheckBox Content="{Binding Name}" 
                                                      Height="25"
                                                      IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                      Checked="CompanyCheckBox_Checked"
                                                      Unchecked="CompanyCheckBox_Unchecked"
                                                      HorizontalAlignment="Left"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Vertical" HorizontalAlignment="Left"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>
                            </ScrollViewer>
                        </StackPanel>
                    </Expander>

                    <!-- Фильтр по описанию веб-сайтов -->
                    <Expander Header="Фильтр по описанию" IsExpanded="True" Margin="0,0,0,10">
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                <TextBox Width="450" Margin="0,0,10,5"
                                         Text="{Binding DescriptionSearchText, UpdateSourceTrigger=PropertyChanged}"
                                         materialDesign:HintAssist.Hint="Поиск по описанию"
                                         Style="{StaticResource StyledTextBox}"/>
                                <Button Command="{Binding ClearDescriptionSelectionCommand}" 
                                        Content="Очистить выбор" 
                                        Style="{StaticResource SecondaryButton}" 
                                        Width="150" 
                                        Margin="0,0,0,5"/>
                            </StackPanel>
                            <ScrollViewer MaxHeight="100" Width="450" Background="#F9F9F9" BorderBrush="#DDD" BorderThickness="1"
                                          HorizontalAlignment="Left" VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding FilteredWebsitesForList}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <CheckBox Content="{Binding Description}" 
                                                      Height="25"
                                                      IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                      Checked="WebsiteCheckBox_Checked"
                                                      Unchecked="WebsiteCheckBox_Unchecked"
                                                      HorizontalAlignment="Left"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Vertical" HorizontalAlignment="Left"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>
                            </ScrollViewer>
                        </StackPanel>
                    </Expander>
                </StackPanel>
            </Border>
        </Expander>

        <!-- Таблица с веб-сайтами -->
        <Border Grid.Row="3" Background="White" CornerRadius="6"
                Effect="{StaticResource CardShadow}" Margin="0,0,0,10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <DataGrid ItemsSource="{Binding FilteredWebsites}"
                          SelectedItem="{Binding SelectedWebsite, Mode=TwoWay}" 
                          AutoGenerateColumns="False" 
                          IsReadOnly="True" 
                          Style="{StaticResource StyledDataGrid}"
                          HeadersVisibility="Column"
                          HorizontalGridLinesBrush="#EEE"
                          VerticalGridLinesBrush="#EEE"
                          BorderThickness="0"
                          RowHeight="38"
                          ColumnHeaderHeight="42">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding WebsiteId}" Width="70" 
                                            ElementStyle="{StaticResource DataGridCellStyle}"/>
                        <DataGridTextColumn Header="Компания" Binding="{Binding CompanyName}" Width="2*"
                                            ElementStyle="{StaticResource DataGridCellStyle}"/>
                        <DataGridTemplateColumn Header="URL" Width="2*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Style="{StaticResource DataGridHyperlinkCellStyle}">
                                        <Hyperlink Command="{Binding DataContext.OpenUrlCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                   CommandParameter="{Binding Url}">
                                            <TextBlock Text="{Binding Url}" TextTrimming="CharacterEllipsis"/>
                                        </Hyperlink>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="2*"
                                            ElementStyle="{StaticResource DataGridCellStyle}"/>
                        <DataGridTextColumn Header="Последнее обновление" Binding="{Binding LastUpdated, StringFormat=yyyy-MM-dd HH:mm:ss}" Width="150"
                                            ElementStyle="{StaticResource DataGridCellStyle}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </ScrollViewer>
        </Border>

        <!-- Кнопка выгрузки -->
        <Button Grid.Row="4" Margin="0,0,10,0" HorizontalAlignment="Right"
                Command="{Binding ExportToCsvCommand}" 
                Style="{StaticResource PrimaryButton}">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <materialDesign:PackIcon Kind="Download" Width="18" Height="18" Margin="0,0,8,0"
                                       VerticalAlignment="Center"/>
                <TextBlock Text="Выгрузить в CSV" FontSize="14" Foreground="White"
                         VerticalAlignment="Center" Margin="0,1,0,0"/>
            </StackPanel>
        </Button>
    </Grid>
</Page>